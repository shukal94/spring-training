<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="ch.shukalovi.service.OrderService" init-method="init" destroy-method="destroy">
        <constructor-arg ref="orderValidator" />
    </bean>
    <bean id="orderValidator" class="ch.shukalovi.validator.OrderValidator" autowire="constructor">
        <property name="minOrderNo" value="100" />
    </bean>
    <bean id="ntsov" class="ch.shukalovi.validator.NonThreadSafeOrderValidator" scope="prototype"/>

</beans>