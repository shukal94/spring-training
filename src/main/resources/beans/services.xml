<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
">

    <context:annotation-config />

    <context:component-scan base-package="ch.shukalovi" />

    <bean id="orderValidatorBasic" class="ch.shukalovi.validator.OrderValidatorBasic" primary="true">
<!--        primary is not post-processor, it should be in bean definition-->
        <property name="minOrderNo" value="100" />
    </bean>
    <bean id="orderValidatorExtended" class="ch.shukalovi.validator.OrderValidatorExtended" />
    <bean id="ntsov" class="ch.shukalovi.validator.NonThreadSafeOrderValidator" scope="prototype"/>
    <bean class="ch.shukalovi.annotation.processor.TraceBeanPostProcessor" />
    <bean class="ch.shukalovi.config.PrototypeByDefaultBeanFactoryPostProcessor" />
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="app.properties" />
    </bean>
</beans>