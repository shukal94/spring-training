<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="ch.shukalovi.service.OrderService" init-method="init" destroy-method="destroy" autowire="constructor">
<!--        <constructor-arg ref="orderValidator" />-->
    </bean>
    <bean id="orderValidatorBasic" class="ch.shukalovi.validator.OrderValidatorBasic" autowire="constructor">
        <property name="minOrderNo" value="100" />
    </bean>
    <bean id="orderValidatorExtended" class="ch.shukalovi.validator.OrderValidatorExtended" autowire="constructor">
    </bean>
    <bean id="ntsov" class="ch.shukalovi.validator.NonThreadSafeOrderValidator" scope="prototype"/>
    <bean class="ch.shukalovi.annotations.processor.TraceBeanPostProcessor" />

</beans>